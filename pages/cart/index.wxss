page {
  padding-bottom: 90rpx;
}
.receiv_address {
  padding: 20rpx;
}
.user_info_row .user_info {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_item .chx_box {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  font-size: 28rpx;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_box {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_box .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_box .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_box .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_box .cart_num_tool .btn_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.fool_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.fool_tool .all_chk {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fool_tool .total_price_box {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.fool_tool .total_price_box .total_price .total_price_txt {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.fool_tool .order_pay {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
