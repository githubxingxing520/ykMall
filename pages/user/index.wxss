page {
  background-color: #edece8;
}
.user_info_box {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user_info_box .user_img_box {
  position: relative;
}
.user_info_box .user_img_box .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_box .user_img_box .user_info {
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translateX(-50%);
  text-align: center;
}
.user_info_box .user_img_box .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_box .user_img_box .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
}
.user_info_box .user_login {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translateX(-50%);
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  left: 50%;
  width: 90%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 100rpx;
}
.user_content .user_main .history_box {
  background-color: #fff;
  display: flex;
}
.user_content .user_main .history_box navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_box navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .orders_box {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content .user_main .orders_box .order_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_box .order_content {
  display: flex;
}
.user_content .user_main .orders_box .order_content navigator {
  flex: 1;
  padding: 15rpx 0;
  text-align: center;
}
.user_content .user_main .orders_box .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .user_main .address_box {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_content .user_main .app_info_box {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_box .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_box .contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
