.page_cate {
  height: 100%;
}
.page_cate .cate_container {
  display: flex;
  height: calc(100vh - 90rpx);
}
.page_cate .cate_container .left_menu {
  flex: 2;
}
.page_cate .cate_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.page_cate .cate_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.page_cate .cate_container .right_content {
  flex: 5;
}
.page_cate .cate_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page_cate .cate_container .right_content .goods_group .goods_title .delimiter {
  padding: 0 10rpx;
  color: #ccc;
}
.page_cate .cate_container .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.page_cate .cate_container .right_content .goods_group .goods_list navigator {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page_cate .cate_container .right_content .goods_group .goods_list navigator image {
  width: 50%;
}
